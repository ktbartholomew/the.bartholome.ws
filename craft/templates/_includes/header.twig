<div id="site-header">
  <div class="grid">
    <div class="col-1-of-3" id="site-logo">
      <a href="/">
        <img src="{{ craft.assets({source: 'images', filename: 'logo.svg'})|first.url }}" alt="The Bartholomews">
      </a>
    </div>
    <div class="col-2-of-3 people-links">
      <ul>
        {% set pages = craft.entries({section: 'pages', showInTopNav: '1'}) %}
        {% for page in pages %}
          <li class="person{% if craft.request.url == page.url %} active{% endif %}">
            <a href="{{ page.url }}">
              <img src="{{ page.topNavImage|first.url('profileSquare') }}" alt="{{ page.title }}">
              <span class="name">{{ page.title }}</span>
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
